{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
      {
        "type": "ColumnSet",
        "columns": [
          {
            "type": "Column",
            "width": 1,
            "items": [
              {
                "type": "TextBlock",
                "text": "Recognized Input",
                "weight": "bolder",
                "size": "medium"
              },
              {
                "type": "Image",
                "url": "https://upload.wikimedia.org/wikipedia/commons/b/b2/Diver_Silhouette%2C_Great_Barrier_Reef.jpg",
                "size": "auto"
              },
              {
                "type": "TextBlock",
                "text": "Name",
                "wrap": true
              },
              {
                "type": "Input.Text",
                "id": "myName",
                "placeholder": "Recognized Name"
              },
              {
                "type": "TextBlock",
                "text": "Email",
                "wrap": true
              },
              {
                "type": "Input.Text",
                "id": "myEmail",
                "placeholder": "recognizedemail@example.com",
                "style": "email"
              },
              {
                "type": "TextBlock",
                "text": "Phone Number"
              },
              {
                "type": "Input.Text",
                "id": "myTel",
                "placeholder": "xxx.xxx.xxxx",
                "style": "tel"
              },
              {
                "type": "TextBlock",
                "text": "Organization"
              },
              {
                "type": "Input.Text",
                "id": "myOrg",
                "placeholder": "Recognized Organization"
              },
              {
                "type": "TextBlock",
                "text": "Webiste"
              },
              {
                "type": "Input.Text",
                "id": "myWeb",
                "placeholder": "www.recognizedwebsite.com"
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "type": "Action.Submit",
        "title": "Submit",
        "data": "Submit"
      }
    ]
  }